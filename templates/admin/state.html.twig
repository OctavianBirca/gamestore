{% if field.value == 1 %}
    <span class="badge text-bg-warning">En attente</span>

{% elseif field.value == 2 %}
    <span class="badge text-bg-primary">Payee</span>

{% elseif field.value == 3 %}
    <span class="badge text-bg-info">Expediee</span>    

{% elseif field.value == 4 %}
    <span class="badge text-bg-success">Livre</span>
    
{% elseif field.value == 5 %}
    <span class="badge text-bg-danger">Annule</span>

{% elseif field.value == 6 %}
    <span class="badge text-bg-light">Resever</span>

{% endif %}